{
    "manifest_version": 2,
    "name": "Syncup AI",
    "version": "0.3",
    "description": "Syncup AI desc",
    "offline_enabled": false,
    "browser_action": {
        "default_popup": "popup.html"
    },
    "background": {
        "scripts": ["worker.js"],
        "persistent": true
    },
    "permissions": [
        "activeTab",
        "tabs",
        "cookies",
        "*://*.linkedin.com/",
        "webRequest",
        "webRequestBlocking"
    ],
    "content_scripts": [
        {
            "matches": [
                "https://*.linkedin.com/*"
            ],
            "js": [
                "runner.js"
            ]
        }
    ],
    "content_security_policy": "script-src 'self' https://*.firebaseio.com; object-src 'self' 'sha256-Ho7X2K2L6khdFcoskyn4z/2hKiebWO/X1OpQnRQdkOU='"
}